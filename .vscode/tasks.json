{
    "version": "2.0.0",
    "tasks": [
        { // 生成可执行的二进制文件
            "type": "shell", // 可以为shell或process，前者相当于先打开shell再输入命令，后者是直接运行命令
            "label": "build", // 任务名称，与launch.json的preLaunchTask相对应
            "command": "qmake", // 要使用的编译器
            "args": [
                "${workSpaceFolder}picop.pro",
                "-spec",
                "linux-g++-64",
                "CONFIG+=debug",
                "CONFIG+=qml_debug",
                "|",
                "lolcat",
                ";",
                "make",
                "-f",
                "${workSpaceFolder}Makefile",
                "qmake_all",
                "|",
                "lolcat",
                ";",
                "make",
                "-j8", // 指定参加编译的CPU核数量
                "|",
                "lolcat"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // 设为false可做到一个tasks.json配置多个编译指令，需要自己修改本文件，我这里不多提
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // 编译运行
            "type": "shell",
            "label": "test",
            "dependsOn": "build",
            "command": "${workSpaceFolder}bin/picop",
            "args": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}